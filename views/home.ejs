<!DOCTYPE html>
<html lang="en">
<%- include('partials/head')  %> 
<body class="home">
    <%- include('partials/header') %> 
    <main>
        <section class="productos">
            <% if (productos.length != 0) { %>
                <% productos.forEach(producto => { %>
                    <article>
                        <img src="/images/<%= producto.imagen %> " alt="">
                        <h4><%= producto.nombre %> </h4>
                        <p><%= producto.descripcion %> </p>
                        <div class="d-flex justify-content-around flex-wrap">
                            <a class="btn btn-sm btn-primary" href="/products/detail/<%= producto.id %> ">ver más</a>
                            <a class="btn btn-sm btn-sucess" href="/products/edit/<%= producto.id %> ">Editar</a>
                            <div>
                                <form action="/products/delete/<%= producto.id %>?_method=DELETE " method="POST">
                                <button class="btn btn-sm btn-danger" type="submit">DESTRUIR</button>
                                </form>
                            </div>
                        </div>

                        
                    </article>
                    <% }) %>
            <% } else { %>
                <h3>No se encuentra el producto de <%= busqueda %>  </h3>
            <% }%>
        </section>
        <aside>
            <h3>tutoriales</h3>
            <section class="tuto">
                <article>
                    <img src="/images/aside-01.jpg" alt="">
                    <p>titulo del tutorial de reparación</p>
                </article>
                <article>
                    <img src="/images/aside-02.jpg" alt="">
                    <p>titulo del tutorial de reparación</p>
                </article>
                <article>
                    <img src="/images/aside-03.jpg" alt="">
                    <p>titulo del tutorial de reparación</p>
                </article>
                <article>
                    <img src="/images/aside-04.jpg" alt="">
                    <p>titulo del tutorial de reparación</p>
                </article>
            </section>
            <h3 class="title-ads">publicidad</h3>
            <section class="ads">
                <img src="/images/ad-01.jpg" alt="">
                <img src="/images/ad-02.jpg" alt="">
            </section>
        </aside>
    </main>
    <%- include('./partials/footer') %>
</body>
</html>