<!DOCTYPE html>
<html lang="es">
<%- include('./partials/head',{title : "Editar producto"}) %>
<body class="register">
    <%- include('./partials/header') %> 
    <main>
        <h1>EDITAR UN PRODUCTO</h1>
        <form action="/products/edit/<%= producto.id  %>?_method=PUT " method="POST">
            <div class="box-form">
                <label for="nombre">Nombre</label>
                <input type="text" name="nombre" id="nombre" value="<%- producto.nombre %> ">
                <span class="text-danger small"><%= locals.errores && errores.nombre ? errores.nombre.msg : null  %> </span>
            </div>
        
            <div class="box-form">
                <label for="email">Descripcion</label>
                <textarea name="descripcion" id="" cols="30" rows="10"><%- producto.descripcion %> </textarea>
                <span class="text-danger small"><%= locals.errores && errores.descripcion ? errores.descripcion.msg : null  %> </span>
            </div>
            <div class="box-form">
                <label for="precio">Precio</label>
                <input type="number" name="precio" id="precio" value=<%= producto.precio%>>
                <span class="text-danger small"><%= locals.errores && errores.precio ? errores.precio.msg : null  %> </span>
            </div>
            
            <div class="box-form">
                <h4>Categoria</h4>
                <select name="categoria" id="categoria">                    
                        <% categorias.forEach(categoria => { %>
                     <option value="<%= categoria %>" <%= producto.categoria=== categoria.toLowerCase() ? 'selected' : null %> ><%= categoria.toLowerCase() %> </option>
                    <% }) %>
                    
                    
                </select>
            </div>
            <div class="box-button">
                <button type="submit">Cargar</button>
            </div>
        </form>
    
    </main>
  
</body>
</html>