<!DOCTYPE html>
<html lang="es">
<%- include('./partials/head',{title : "Editar producto"}) %>
<body class="register">
    <%- include('./partials/header') %> 
    <main>
        <h1>EDITAR UN PRODUCTO</h1>
        <form action="/products/edit/<%= producto.id  %>?_method=PUT " method="POST">
            <div class="box-form">
                <label for="nombre">Nombre</label>
                <input type="text" name="nombre" id="nombre" value="<%- producto.nombre %> ">
            </div>
        
            <div class="box-form">
                <label for="email">Descripcion</label>
                <textarea name="descripcion" id="" cols="30" rows="10"><%- producto.descripcion %> </textarea>
            </div>
            <div class="box-form">
                <label for="precio">Precio</label>
                <input type="number" name="precio" id="precio" value=<%= producto.precio%>>
            </div>
            
            <div class="box-form">
                <h4>Categoria</h4>
                <select name="categoria" id="categoria">                    
                        <% categorias.forEach(categoria => { %>
                     <option value="<%= categoria.nombre %>" <%= producto.categoria=== categoria.nombre.toLowerCase() ? 'selected' : null %> ><%= categoria.nombre.toLowerCase() %> </option>
                    <% }) %>
                    
                    
                </select>
            </div>
            <div class="box-button">
                <button type="submit">Cargar</button>
            </div>
        </form>
    
    </main>
  
</body>
</html>