<!DOCTYPE html>
<html lang="es">
<%- include('../partials/head') %> 
<body>
    <%- include('./partials/header_admin') %>
    <main>
        <div class="card">
        <table class="table table-hover">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Productos</th>
                <th scope="col">Descripcion</th>
                <th scope="col">Categoria</th>
                <th scope="col">Accion</th>
              </tr>
            </thead>
            <tbody>
                <% productos.forEach(producto => { %>
              <tr>
                <th scope="row">1</th>
                
                <td>
                    
                     <%= producto.nombre  %> 
                   
                </td>
                <td>
                    <%= producto.descripcion %> 
                </td>
                <td><%= producto.categoria %> </td>
                <td class="d-flex justify-content">
                    <a class="btn btn-sm btn-success" href="/products/edit/<%= productos.id  %> "><i class="fa-solid fa-pen-to-square"></i></a>
                    <div>
                        <form action="/products/delete/<%= productos.id %>?_method=DELETE " method="POST">
                        <button class="btn btn-sm btn-danger" type="submit"><i class="fa-solid fa-trash"></i></button>
                        </form>
                    </div>
                </td>
              </tr>

                
              <% }) %>
            </tbody>
          </table>
        </div>
    </main>
    
    <%- include('../partials/scripts') %>  
</body>
</html>